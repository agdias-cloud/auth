pipeline {
  agent none
  environment {
    buildah = 'agents/buildah.yaml'
  }
  stages {
    stage('npm install') {
      agent {
        kubernetes {
          yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: node
                image: node:lts-slim
                command:
                - cat
                tty: true
          
          '''
        }
      }
      steps {
       container ('node') {
        sh 'npm install'
       }
      }
    }
    stage('Registry login') {
    
      agent {
        kubernetes {
          yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              - name: buildah
                image: buildah/buildah
                command:
                - cat
                tty: true

          '''
        }
      }
      steps {
        container('buildah') {
          sh 'buildah login --help'
        }
      }
      
       
    }
}
}


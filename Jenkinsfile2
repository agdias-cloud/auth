pipeline {
  agent none

  stages {
    stage ('Registry login') {
      agent {
        kubernetes {
          yaml '''
            apiVersion: v1
            kind: Pod
            spec:
              image: buildah/buildah
              name: buildah
              command:
              - cat 
              tty: true

          '''
        }
        steps {
          container('buildah') {
            sh buildah login --help
          }
        }
      }
    }
  }

}
pipeline {
   agent {
     kubernetes {
       yaml '''
         apiVersion: v1
         kind: Pod
         spec:
           containers:
           - name: buildah
             image:  buildah/buildah
             
             command:
             - cat
             tty: true
         '''
     }
  }

  stages {
    stage ('Registry login') {
     
        steps {
          container('buildah') {
            sh 'buildah login --help'
          }
        }
      }
    }
}


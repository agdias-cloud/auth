pipeline {
  agent none
  environment {
    buildah = 'agents/buildah.yaml'
  }
  stages {
    stage('Registry login') {
      agent {
        kubernetes {
          yaml readFile file: ${buildah}
        }
      }
      steps {
        container('buildah') {
          sh 'buildah login --help'
        }
      }
      
       
    }
}
}


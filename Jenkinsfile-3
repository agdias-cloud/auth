pipeline {
    agent none
    environment {
        NODE_IMAGE = 'node:lts-slim'
        BUILDAH_IMAGE = 'buildah/buildah'
    }
    stages {
        stage('Install Packages') {

            agent {
                kubernetes {
                  
                  label 'npm-pod'
                  yamlFile './agents/node-pod.yaml'
                }
            }
            steps {

                container('node') {
                    sh 'npm --prefix ./app/  install'
                    sh 'npm --prefix ./app/  run build'
                    sh 'ls -l ./app/dist'
                }
            }
            
        }
        stage('Build image') {
            agent {
                kubernetes {
                    label 'buildah-pod'
                    yamlFile './agents/builda-pods.yaml'
                }
            }
            steps {
                container('buildah') {
                    sh 'buildah login --tls-verify=false  harbor.internal.local'
                }
            }
        }
        
       
    }
}

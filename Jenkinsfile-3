pipeline {
    agent none
    environment {
        NODE_IMAGE = 'node:lts-slim'
        BUILDAH_IMAGE = 'buildah/buildah'
    }
    stages {
        stage('Install Packages') {

            agent {
                kubernetes {
                  
                  label 'npm-pod'
                  yamlFile './agents/node-pod.yaml'
                }
            }
            steps {

                container('node') {
                    sh 'npm install --prefix ./app/'
                }
            }
        }
        stage('Build') {
            agent {
                kubernetes {
                    label 'npm-build'
                    yamlFile './agents/buildah-pod.yaml'
                }
            }
            steps {
                container ('node') {
                    sh 'npm build --prefix ./app/'
                }
            }
        }
       
    }
}

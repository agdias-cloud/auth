pipeline {
    agent none
    environment {
        NODE_IMAGE = 'node:lts-slim'
        BUILDAH_IMAGE = 'buildah/buildah'
    }
    stages {
        stage('Install Packages') {

            agent {
                kubernetes {
                  
                  label 'npm-pod'
                  yamlFile './agents/node-pod.yaml'
                }
            }
            steps {

                container('node') {
                    sh 'npm install --prefix ./app/'
                    sh 'npm run build --prefix ./app/'
                }
            }
            
        }
        
       
    }
}
